@{
    Layout = "~/Views/BigScreen/_ScreenLayout.cshtml";
}

<script src="~/Web_GlobalResources/FASTjs-V1.0/BigScreen/MonitorScreen.js"></script>
<style type="text/css">
   
    #s1 .line { margin-left: 15px; }
    #s1 .line1 { font-size: 30px; color: #ffffff; line-height: 30px; height: 50px; margin-top: 35px; }
    #taskState { font-size: 48px; color: #d0cb25; }
    #s1 .line2, #s1 .line4 { font-size: 25px; margin-top: 39px; color: #ffffff; line-height: 25px; height: 25px; }
    #s1 .line3, #s1 .line5 { height: 33px; margin-top: 10px; }
    #s1 .taskbar { height: 33px; line-height: 33px; color: #ffffff; font-size: 24px; text-align: right; border-radius: 16px 16px; position: absolute; padding-right: 10px; padding-left:10px;}
    #s1 .complete { background-color: #17be00; z-index: 1; white-space: nowrap; }
    #s1 .total { background-color: #0343c9; width: 581px; }
    #taskTime1 { width: 0px; }
    #taskSequence1 { width: 0px; }

    #s2 .line { height: 40px; margin-left: 15px; font-size: 36px; color: #9ae6f3; margin-top: 15px; }
    #s2 .blue-text { color: #00feff; }
    #s2 .line1 { margin-top: 15px; }
    #s2 .line1 i { margin-left: 164px; }
    #s2 .line2 span { display: inline-block; }
    #curDate { width: 205px; }
    #curMJD { margin-left: 30px; }
    #s2 .line3 { margin-top: 35px; }

    #s3 .line { height: 40px; font-size: 30px; color: #ffffff; margin-top: 15px; }
    #s3 span { display: inline-block; width: 320px; text-align: right; }
    #s3 .blue-text { color: #00feff; font-size: 36px; width: 190px; }

    .s45 { color: #9ae6f3; font-size: 24px; }
    .s45 .box-subtitle:first-child { margin-top: 50px; }
    .s45 div { margin-left: 15px; height: 40px; }
    .s45 span { display: inline-block; }
    .s45 .box-text { width: 225px; }
    .s45 .tag-trd { color: #ffffff; width: 20px; }
    .s45 .blue-text { color: #00feff; }
    .s45 .green-text { color: #04f604; }
    .s45 .yellow-text { color: #fff000; }

    #s6 { color: #9ae6f3; font-size: 24px; }
    #s6 .box-subtitle, #s6 .secondpart { margin-top: 50px; }
    #s6 div { margin-left: 15px; height: 40px; }
    #s6 span { display: inline-block; }
    #s6 .box-text { width: 225px; }
    #s6 .tag-trd { color: #ffffff; width: 20px; }
    #s6 .blue-text { color: #00feff; }
    #s6 .green-text { color: #04f604; }
    #s6 .yellow-text { color: #fff000; }
    #s6 .el { width: 51px; text-align:right;}
</style>

<div id="container" class="container-monitor">
    <div id="s1">
        <div class="line line1">
            当前观测任务状态 : <span id="taskState">未开始</span>
        </div>
        <div class="line line2">观测时间</div>
        <div class="line line3">
            <div id="taskTime1" class="taskbar complete">已时间 : <span id="taskTimeComplete"></span></div>
            <div id="taskTime2" class="taskbar total">总共时间 : <span id="taskTimeTotal"></span></div>            
        </div>
        <div class="line line4">观测队列</div>
        <div class="line line5">
            <div id="taskSequence1" class="taskbar complete">已完成 : <span id="taskSequenceComplete"></span></div>
            <div id="taskSequence2" class="taskbar total">总共 : <span id="taskSequenceTotal"></span></div>
        </div>
    </div>
    <div id="s2">
        <div class="line line1">
            日期<i>&nbsp;</i>儒略日
        </div>
        <div class="line line2">
            <span id="curDate" class="blue-text"></span>
            <span id="curMJD" class="blue-text"></span>
        </div>
        <div class="line line3">
            <span>本地时</span>
            <span>:</span>
            <span id="curTime" class="time-text blue-text"></span>
        </div>
        <div class="line line4">
            <span>世界时</span>
            <span>:</span>
            <span id="curUT" class="time-text blue-text"></span>
        </div>
        <div class="line line5">
            <span>恒星时</span>
            <span>:</span>
            <span id="curStartime" class="time-text blue-text"></span>
        </div>
    </div>
    <div id="s3">
        <div id="s3_1">
            <div class="line line1">
                <span>主光轴偏差</span>
                <span id="devAxis" class="dev-text1 blue-text"></span>
            </div>
            <div class="line line2">
                <span>径向偏差</span>
                <span id="devRadial" class="dev-text1 blue-text"></span>
            </div>
            <div class="line line3">
                <span>多波束自旋偏差</span>
                <span id="devMulti" class="dev-text1 blue-text"></span>
            </div>
        </div>
        <div id="s3_2">
            <div class="line line1">
                <span>馈源AB轴偏差</span>
                <span id="devFeedAB" class="dev-text2 blue-text"></span>
            </div>
            <div class="line line2">
                <span>馈源相位中心偏差</span>
                <span id="devFeedCentral" class="dev-text2 blue-text"></span>
            </div>
            <div class="line line3">
                <span>反射面偏差</span>
                <span id="devReflector" class="dev-text2 blue-text"></span>
            </div>
        </div>
    </div>
    <div id="s4" class="s45">
        <div class="box-subtitle">
            指向
        </div>
        <div class="box-line">
            <span class="tag-trd">T</span>
            <span>RA</span>
            <span>:</span>
            <span id="dirTRA" class="box-text blue-text"></span>
            <span>DEC</span>
            <span>:</span>
            <span id="dirTDEC" class="box-text blue-text"></span>
        </div>
        <div class="box-line">
            <span class="tag-trd">R</span>
            <span>RA</span>
            <span>:</span>
            <span id="dirRRA" class="box-text blue-text"></span>
            <span>DEC</span>
            <span>:</span>
            <span id="dirRDEC" class="box-text blue-text"></span>
        </div>
        <div class="box-line">
            <span class="tag-trd">D</span>
            <span>RA</span>
            <span>:</span>
            <span id="dirDRA" class="box-text green-text"></span>
            <span>DEC</span>
            <span>:</span>
            <span id="dirDDEC" class="box-text yellow-text"></span>
        </div>
        <div class="box-subtitle">
            扫描偏移
        </div>
        <div class="box-line">
            <span class="tag-trd">T</span>
            <span>RA</span>
