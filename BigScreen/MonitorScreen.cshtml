            <span id="scanDL" class="box-text green-text"></span>
            <span>DEC</span>
            <span>:</span>
            <span id="scanDB" class="box-text yellow-text"></span>
        </div>
    </div>
    <div id="s6">
        <div class="box-subtitle">
            指向
        </div>
        <div class="box-line">
            <span class="tag-trd">T</span>
            <span>RA</span>
            <span>:</span>
            <span id="appTRA" class="box-text blue-text"></span>
            <span class="el">DEC</span>
            <span>:</span>
            <span id="appTDEC" class="box-text blue-text"></span>
        </div>

        <div class="box-line">
            <span class="tag-trd">R</span>
            <span>RA</span>
