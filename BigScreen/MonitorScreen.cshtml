        <div class="box-line">
            <span class="tag-trd">D</span>
            <span>RA</span>
            <span>:</span>
            <span id="scanDRA" class="box-text green-text"></span>
            <span>DEC</span>
            <span>:</span>
            <span id="scanDDEC" class="box-text yellow-text"></span>
        </div>
    </div>
    <div id="s5" class="s45">
        <div class="box-subtitle">
            指向
        </div>
        <div class="box-line">
            <span class="tag-trd">T</span>
            <span>RA</span>
